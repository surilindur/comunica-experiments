@prefix fuseki: <http://jena.apache.org/fuseki#> .
@prefix ja: <http://jena.hpl.hp.com/2005/11/Assembler#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

<#server> rdf:type fuseki:Server ;
    # Timeout: 1s to first result, 30s for the rest of the query
    ja:context [ ja:cxtName "arq:queryTimeout" ;  ja:cxtValue "1000,30000" ] ;
    fuseki:services ( <#solidpods> ) .

<#solidpods> rdf:type fuseki:Service ;
    # The read-only endpoint will be at /sparql
    fuseki:name "sparql" ;
    fuseki:endpoint [ fuseki:operation fuseki:query ] ;
    fuseki:dataset [ rdf:type ja:MemoryDataset; ja:data <file:/fuseki/data.nq> ] .
